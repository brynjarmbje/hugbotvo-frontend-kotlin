<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gameContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <!-- Lottie Animation Background -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/backgroundAnimation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:lottie_rawRes="@raw/mountain_background"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_speed="1.0"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Player Info TextView -->
    <TextView
        android:id="@+id/playerInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player: Unknown | Level: 1"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Instruction -->
    <TextView
        android:id="@+id/gameInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LeiÃ°beiningar..."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/playerInfoTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="0dp"/>

    <!-- Audio Button with Sparkles -->
    <FrameLayout
        android:id="@+id/audioButtonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gameInstruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <!-- Lottie Animation Background -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/cloudAnimation"
            android:layout_width="200dp"
            android:layout_height="120dp"
            app:lottie_rawRes="@raw/cloud"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_speed="1.0"
            android:scaleType="centerCrop" />

        <!-- Button Text -->
        <TextView
            android:id="@+id/audioButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hlusta"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="0dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp" />

        <!-- Sparkles Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/sparklesAnimation"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/sparkles_animation"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- Options Container -->
    <LinearLayout
        android:id="@+id/optionsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/audioButtonContainer"
        app:layout_constraintBottom_toTopOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp" />

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Til baka"
        android:background="@drawable/button_background_with_shadow"
        android:textColor="@android:color/black"
        android:stateListAnimator="@null"
        android:onClick="onButtonClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>