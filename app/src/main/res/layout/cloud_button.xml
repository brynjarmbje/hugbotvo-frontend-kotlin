<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/cloud_button.xml -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Cloud Background -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/cloudButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hlusta"
        android:textSize="24sp"
        android:background="@drawable/cloud_button_background"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textColor="@android:color/black"
        android:stateListAnimator="@animator/button_animator"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        app:elevation="0dp"
        android:onClick="onButtonClick" />

    <!-- Sparkles Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/sparklesAnimation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/sparkles_animation"
        android:layout_gravity="center" />

</FrameLayout>