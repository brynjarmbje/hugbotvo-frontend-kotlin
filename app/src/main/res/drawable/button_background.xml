<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Light background color -->
    <solid android:color="#F0F8FF" /> <!-- Light blue -->

    <!-- Neon blue and golden border -->
    <stroke
        android:width="4dp"
        android:color="#00FFFF" /> <!-- Neon blue -->
    <stroke
        android:width="2dp"
        android:color="#FFD700" /> <!-- Golden -->

    <!-- Rounded corners for a cloud-like appearance -->
    <corners android:radius="24dp" />
</shape>